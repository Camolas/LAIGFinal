    </NODE>
	
	    <!-- The 5th white connection -->
     <NODE id="wcyl5">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />  
	
		<TRANSLATION x="-0.933" y="0" z="-1.616" />
	   	<ROTATION axis="y" angle="-150" />

        <DESCENDANTS>
            <LEAF  type="cylinder" args="1 0.5 0.5 20 20 0 0" />    
