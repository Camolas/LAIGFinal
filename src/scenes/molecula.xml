	    <!-- The 4th atom -->
     <NODE id="ws4">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />  

		<TRANSLATION x="-1.866" y="0" z="3.232" />		

        <DESCENDANTS>
            <LEAF  type="sphere" args="1 20 20" />    
        </DESCENDANTS>

    </NODE>
	
	    <!-- The 5th atom -->
     <NODE id="ws5">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />  

		<TRANSLATION x="-1.866" y="0" z="-3.232" />		

        <DESCENDANTS>
            <LEAF  type="sphere" args="1 20 20" />    
        </DESCENDANTS>

    </NODE>
	
	    <!-- White connection -->
     <NODE id="whiteCylinders">       
        <MATERIAL id="null" />    
        <TEXTURE id="glass" />       			

        <DESCENDANTS>
            <NODEREF id="wcyl1" />     	    
            <NODEREF id="wcyl2" />     	    
            <NODEREF id="wcyl3" />     	   
            <NODEREF id="wcyl4" />     
			<NODEREF id="wcyl5" />			
        </DESCENDANTS>

    </NODE>

	    <!-- The 1st white connection -->
     <NODE id="wcyl1">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />  

	     	<ROTATION axis="x" angle="-90" />
		<TRANSLATION x="0" y="0" z="1.866" />	

        <DESCENDANTS>
            <LEAF  type="cylinder" args="1 0.5 0.5 20 20 0 0" />    
        </DESCENDANTS>

    </NODE>

	    <!-- The 2nd white connection -->
     <NODE id="wcyl2">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />  
	
	     	<ROTATION axis="x" angle="90" />
		<TRANSLATION x="0" y="0" z="1.866" />		

        <DESCENDANTS>
            <LEAF  type="cylinder" args="1 0.5 0.5 20 20 0 0" />    
        </DESCENDANTS>

    </NODE>
	
	    <!-- The 3rd white connection -->
     <NODE id="wcyl3">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />  
	
		<ROTATION axis="y" angle="90" />
		<TRANSLATION x="0" y="0" z="1.866" />	
	     
		<ANIMATIONREFS>
			<ANIMATIONREF id="circular_test2" />
		</ANIMATIONREFS>
	     
        <DESCENDANTS>
            <LEAF  type="cylinder" args="1 0.5 0.5 20 20 0 0" />    
        </DESCENDANTS>

    </NODE>
	
	    <!-- The 4th white connection -->
     <NODE id="wcyl4">       
        <MATERIAL id="null" />    
        <TEXTURE id="null" />  

		<TRANSLATION x="-0.933" y="0" z="1.616" />	
		<ROTATION axis="y" angle="-30" />		

        <DESCENDANTS>
            <LEAF  type="cylinder" args="1 0.5 0.5 20 20 0 0" />    
