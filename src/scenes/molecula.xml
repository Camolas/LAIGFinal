    </NODE>
	
	    <!-- Pink connection -->
     <NODE id="pinkCylinders">       
        <MATERIAL id="null" />    
        <TEXTURE id="plastic" />       			

        <DESCENDANTS>
            <NODEREF id="pcyl1" />     	    
